@model IEnumerable<Ecommerce.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" role="button">Create New</a>
</p>
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <img src="@Url.Content("~/category-photos/"+item.Image)" alt="image" style="width:80px;height:80px">
                @*@Html.DisplayFor(modelItem => item.Image)*@
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" role="button">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success" role="button">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" role="button">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
