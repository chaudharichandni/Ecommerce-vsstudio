@model Ecommerce.Models.Brand

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

<h1>Create</h1>

<h4>Brand</h4>
<hr />
    
<div class="row">
    <div class="col-md-4">
    @using (Html.BeginForm("UploadImage", "Brands", FormMethod.Post, new { enctype = "multipart/form-data" }))
       {
        <form asp-action="Create" class="btn btn-primary">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                   @* <label asp-for="Id" class="control-label"></label>*@
                    <input asp-for="Id" class="form-control" type="hidden"/>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" class="form-control" type="file" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        }
    </div>
</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

